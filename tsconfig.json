{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src",
        "declaration": true,
        "esModuleInterop": true,
        "inlineSourceMap": false,
        "lib": ["esnext", "dom", "dom.iterable"],
        "listEmittedFiles": false,
        "listFiles": false,
        "module": "esnext",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "outDir": "dist/tmp_tsoutput",
        "pretty": true,
        "resolveJsonModule": true,
        "rootDir": "src",
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": false,
        "target": "esnext",
        "traceResolution": false,
        "types": ["node"]
    },
    "compileOnSave": false,
    "exclude": ["node_modules", "dist", "test", "webpack.config.js"]
}
